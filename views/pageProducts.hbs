<div class="modal" id="myModal2">
  <div class="modal-dialog">
    <div class="modal-content">

      <div class="modal-header">
        <h4 class="modal-title">Add Product</h4>
        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
      </div>
      <div class="modal-body">
        <form method="get" action="/add-products">
          <div class="mb-3">
            <label for="exampleInputPassword1" class="form-label">Nhập link ảnh của sản phẩm</label>
            <input value="" name="imgPR" type="text" class="form-control" id="img" required />
          </div>
          <div class="mb-3">
            <label for="exampleInputPassword1" class="form-label">Nhập mã sản phẩm</label>
            <input value="" name="idPR" type="text" class="form-control" id="id" required />
          </div>
          <div class="mb-3">
            <label for="exampleInputPassword1" class="form-label">Nhập tên sản phẩm</label>
            <input value="" name="namePR" type="text" class="form-control" id="name" required />
          </div>
          <div class="mb-3">
            <label for="exampleInputPassword1" class="form-label">Nhập giá sản phẩm
            </label>
            <input value="" name="pricePR" type="number" class="form-control" id="price" min="0" required />
          </div>
          <div class="mb-3">
            <label for="exampleInputPassword1" class="form-label">Nhập màu sắc sản phẩm
            </label>
            <input value="" name="colorPR" type="text" class="form-control" id="color" required />

          </div>
          <div class="mb-3">
             <label for="exampleInputPassword1" class="form-label">Chọn tên người bán
            </label>
             <select name="salerPR">
            {{#each dataUser}}
            <option>{{hoten}}</option>
            {{/each}}
          </select>
          </div>
         

          <button type="submit" class="btn btn-danger">Yes</button>
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">No</button>
        </form>
      </div>
    </div>
  </div>
</div>
