<div class="container-fluid">
  <div class="row m-auto p-3">
    <table class="table table-striped text-center">
      <thead>
        <tr>
          <th scope="col-2">STT</th>
          <th scope="col">Mã sản phẩm</th>
          <th scope="col">Ảnh</th>
          <th scope="col">Tên sản phẩm</th>
          <th scope="col">Đơn giá</th>
          <th scope="col">Màu sắc</th>
          <th scope="col">Người bán</th>

        </tr>
      </thead>
      <tbody>
        {{#if dataProduct}}
        {{#each dataProduct}}
        <tr>
          <th scope="row">{{@index}}</th>
          <th>{{masp}}</th>
          <td><img alt="" style="width: 70px;height: 70px;" src={{anh}} /></td>
          <td>{{tensp}}</td>
          <td>{{dongia}}</td>
          <td>{{mausac}}</td>
          <td>{{nguoiban}}</td>
          <td>

            <div class="container mt-3">
              <button type="button" class="btn btn-success" data-bs-toggle="modal" data-bs-target="#myModal1{{_id}}">
                Sửa
              </button>
            </div>
            <!-- The Modal -->
            <div class="modal" id="myModal1{{_id}}">
              <div class="modal-dialog">
                <div class="modal-content">
                  <!-- Modal Header -->
                  <div class="modal-header">
                    <h4 class="modal-title">Do You Want To Edit This
                      Product</h4>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                  </div>
                  <div class="modal-body">
                    <form method="get" action="updatePR">
                      <div class="mb-3">
                        <label for="exampleInputPassword1" class="form-label">Enter link image product</label>
                        <input value={{anh}} name="imgPR" type="text" class="form-control" id="img" required />
                      </div>
                      <div class="mb-3">
                        <label for="exampleInputPassword1" class="form-label">Enter id product</label>
                        <input value={{masp}} name="idPR" type="text" class="form-control" id="id" required />
                      </div>
                      <div class="mb-3">
                        <label for="exampleInputPassword1" class="form-label">Enter name product</label>
                        <input name="namePR" type="text" class="form-control" id="name" required value={{tensp}} />
                      </div>
                      <div class="mb-3">
                        <label for="exampleInputPassword1" class="form-label">Enter price product</label>
                        <input value={{dongia}} name="pricePR" type="number" class="form-control" id="price" min="0"
                          required />
                      </div>
                      <div class="mb-3">
                        <label for="exampleInputPassword1" class="form-label">Enter color product</label>
                        <input value={{mausac}} name="colorPR" type="text" class="form-control" id="color" required />
                      </div>
                      
                     
                      <div class="mb-3">
                         <label for="exampleInputPassword1" class="form-label">Enter seller</label>
                      <input type="text" value={{nguoiban}} name="salerPR" required>
                      </div>
                     
                      <input name="idupPR" class="d-none" value={{_id}}>

                      <button type="submit" class="btn btn-danger">Yes</button>
                      <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">No</button>
                    </form>
                  </div>
                </div>
              </div>
            </div>
            <div class="container mt-3">
              <button type="button" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#myModal{{_id}}">
                Xoá
              </button>
            </div>
            <!-- The Modal -->
            <div class="modal" id="myModal{{_id}}">
              <div class="modal-dialog">
                <div class="modal-content">
                  <!-- Modal Header -->
                  <div class="modal-header">
                    <h4 class="modal-title">Do You Want To Remove This
                      Product</h4>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                  </div>
                  <div class="modal-footer">
                    <form method="get" action="deleteProduct">
                      <input type="hidden" name="idProduct" value="{{_id}}" />
                      <button type="submit" class="btn btn-danger">Yes</button>
                    </form>
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">No</button>
                  </div>
                </div>
              </div>
            </div>
          </td>
        </tr>
        {{/each}}
         {{else}}
                <tr>
                    <p>Không có dữ liệu tìm kiếm.</p>
                </tr>
                {{/if}}
      </tbody>
    </table>
  </div>
</div>